<div class="container mt-5">
  <div class="row">
    <div class="col-6 offset-3">
      <h1 class="mb-3">Add <%= get_company_name(@company.ticker) %> to a porfolio</h1>
      <%= simple_form_for [@company, @companiespointer] do |f| %>
        <%= f.association :group, label: "Portfolio",collection: @groups_wanted, class:'genForm_dropBox'%>
        <div class="d-flex justify-content-between m-2 mt-4">
          <%= link_to "Cancel", companies_path, class:"btn btn-outline-primary" %>
          <%= f.button :submit, "Add to porfolio", class:"btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
