<%= render 'shared/sidebar' %>

<div class="content-container col-10">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-3"><%= @group.name.capitalize %></h1>


      <!-- generate excel file -->
      <%= link_to "Download as excel", group_path(@group, format: :xlsx) %>

    </div>
  </div>
  <div class="scrollable">
    <%@group.companies.each_with_index do |company, index|%>
      <%#= @pe_ratio[index] %>

      <div class="group-item">
        <%= render 'shared/group_item', company: company, index: index %>
      </div>
    <%end%>
  </div>
</div>
