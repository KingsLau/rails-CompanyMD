<h1>This is the group show page</h1>
<%@group.companies.each_with_index do |company, index|%>
  <p><%=company.ticker%></p>
  <div class="col-6 card-company-graph">
    <%= line_chart @companies_chart_array[index],
        min: @min_price[index]*0.9,
        defer: true,
        colors: ["#75E6DA"],
        points: false,
        width: '100%',
        height: '100px',
        library: {
          scales: {
              xAxes: [{ display: false }],
              yAxes: [{ display: false }]
          }
        }
    %>
  </div>
<%end%>
