<%= render 'shared/sidebar' %>

<div class="content-container col-10">
  <div class="row">
    <div class="col-12 group-name">
      <h1 class="mb-3">
      <%= @group.name.capitalize %>
      <%= link_to "#", data: {toggle: "modal", target: "#modalgroupeditForm"}, title: 'Edit group name' do %>
        <i class="fas fa-pencil-alt edit"></i>
      <% end %>
      <%= link_to group_path(@group, format: :xlsx), class: 'text-decoration-none ml-2', title: 'Download data as excel' do %>
        <i class="fas fa-file-excel ml-2 download"></i>
      <% end %>
      </h1>
    </div>
  </div>
  <div class="scrollable">
    <%@group.companies.each_with_index do |company, index|%>
      <div class="group-item">
        <%= link_to group_companies_pointer_path(@group, @group.companies_pointers[index]), method: :delete, data:{confirm: "Are you sure you want to delete?"}, title: 'Delete from group' do %>
          <i class="fas fa-times-circle delete"></i>
        <% end %>
        <%= render 'shared/group_item', company: company, index: index %>
        <%= render 'shared/company_tab_display', company: company %>
      </div>
    <%end%>


  </div>
</div>

<div class="modal fade" id="modalgroupeditForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= simple_form_for [@group] do |f| %>
  <%= f.input :name, placeholder: "Type your new group name"%>
  <%= f.submit "confirm", class: "btn btn-primary" %>
  <% end %>
</div>
