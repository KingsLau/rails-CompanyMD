
<%= link_to group_path(group), title: "Go to #{group.name}", class: 'text-decoration-none' do %>
  <div class="basket-card">
    <p class="text-truncate"><%=group.name%></p>
    <p>(<%= group.companies.count %>)</p>
    <i class="fas fa-pencil-alt edit">
  </div>
<% end %>

<%= link_to group_path(group), method: :delete do %>
    <i class="fas fa-minus-circle"></i>
<% end %>
