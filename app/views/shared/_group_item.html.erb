<%= render 'shared/company_name', '@company': company %>
<%= render 'shared/company_data', '@company': company %>
<div class="col-6 show-graph">
  <%= line_chart @companies_chart_array[index],
      min: @min_price[index]*0.9,
      defer: true,
      colors: ["#75E6DA"],
      points: false,
      width: '100%',
      height: '100px',
      library: {
        scales: {
            xAxes: [{ display: false }],
            yAxes: [{ display: false }]
        }
      }
  %>
</div>
