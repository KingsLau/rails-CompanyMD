<div class="company-description">
  <h2>
    <%= link_to get_company_name(@company.ticker), company_path(@company) %>
  </h2>
  <h2 class="company-ticker"><%= @company.ticker %></h2>
  <h2>
    <% if company_data[:change_percent] >= 0 %>
      <i class="fas fa-arrow-up mr-2 arrow"></i>
    <% else %>
      <i class="fas fa-arrow-up mr-2 arrow down"></i>
    <% end %>
    <span class="stock-price"><%= quote_endpoint(@company.ticker)[:price] %></span>
  </h2>
</div>
