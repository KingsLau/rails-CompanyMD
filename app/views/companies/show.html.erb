<%= render 'shared/sidebar' %>

<div class="content-container col-10">
  <div class="row">
    <div class="col-6">
      <%= render 'shared/company_description' %>
    </div>
    <div class="col-6 d-flex">
      <%= render 'shared/company_data' %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="show-graph">
      <%= line_chart @price_data_array, min: (@min_price[0]*0.9).round, width: "100%", height: "500px", points: false, colors: ["#75E6DA"] %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% @news_array.each do |article| %>
        <p>
          <%= link_to article[1], article[3] %>
        </p>
        <p><%= article[0] %>-(source)</p>
        <p><%= article[2] %>-(description)</p>
        <p><%= link_to "link", article[3] %>-(url)</p>
      <% end %>
    </div>
  </div>
</div>


