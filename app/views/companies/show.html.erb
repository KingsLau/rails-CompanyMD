<%= render 'shared/sidebar' %>

<div class="content-container col-10">
  <div class="row">
    <div class="col-6">
      <%= render 'shared/company_description' %>
    </div>
    <div class="col-6 d-flex">
      <%= render 'shared/company_data' %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-12">
      <div class="show-graph">
      <%= line_chart @price_data_array, min: (@min_price[0]*0.9).round, width: "100%", height: "500px", points: false, colors: ["#75E6DA"] %>
      </div>
    </div>
  </div>

    <%= render 'shared/company_detailed_data' %>

  <div class="row">
    <div class="col-12">
      <h3 class="mb-3">News Feed</h3>
      <% @news_array.first(5).each do |article| %>
        <%= render 'shared/news_card', article: article %>
      <% end %>
    </div>
  </div>
</div>
