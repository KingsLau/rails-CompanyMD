<%= render 'shared/sidebar' %>

<div class="content-container col-10">
  <div class="row">
    <div class="col-6">
      <%#= render 'shared/company_description' %>
    </div>
    <div class="col-6 d-flex">
      <%#= render 'shared/company_data', company_data: @company_data, dividend_yield: @dividend_yield, pe_ratio: @pe_ratio %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-12">
      <div class="show-graph">
      <h3 class="graph-label text-center">
        Last 4 months
        <%= link_to company_path(@company, format: :xlsx), class: 'text-decoration-none', title: 'Download data as excel' do %>
          <i class="fas fa-file-excel ml-2 download"></i>
        <% end %>
      </h3>
      <%= line_chart company_charts_show_daily_path(@company), min: nil, width: "100%", height: "500px", points: false, colors: ["#75E6DA"] %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-12">
      <div class="info-tabs mt-3">
        <%= link_to "Fetch SEC Financial Data for #{@company.ticker}", company_financial_path(@company), remote: true, id: "financials" %>
        <%= link_to "Fetch news about #{@company.ticker}", company_news_index_path(@company), remote: true, id: "news" %>
        <%= link_to "Fetch SEC Reports for #{@company.ticker}", company_sec_data_fetches_path(@company), remote: true, id: "reports" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div id="financials-content" style="display: none" data-loaded="false"></div>
      <div id="news-content" style="display: none" data-loaded="false"></div>
      <div id="reports-content" style="display: none" data-loaded="false"></div>
    </div>
  </div>

</div>


