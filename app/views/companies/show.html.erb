<%= render 'shared/sidebar' %>

<div class="content-container col-10">
  <div class="row">
    <div class="col-6">
      <%= render 'shared/company_description' %>
    </div>
    <div class="col-6 d-flex">
      <%= render 'shared/company_data' %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-12">
      <div class="show-graph">
      <%= line_chart @price_data_array, min: (@min_price[0]*0.9).round, width: "100%", height: "500px", points: false, colors: ["#75E6DA"] %>
      </div>
    </div>
  </div>



  <div class="row">
    <div class="col-12">
      <%= form_tag company_news_index_path(@company), method: :get, remote: true do %>
      <%= submit_tag "submit me", class: "btn btn-primary" %>
      <% end %>
      <div id="news-container">
        <!-- API CALL for news will fill this div -->
      </div>
    </div>
  </div>
</div>

